<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".CardInfo">



    <ScrollView
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:fontFamily="@font/nanum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_cardID"
                    android:text="ST1-02"/>

                <TextView
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/nanum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#d50000"
                    android:id="@+id/text_cardKind"
                    android:text="디지몬카드"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/border_coner1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_cardLevel"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textColor="#ffffff"
                        android:background="#d50000"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"


                        android:fontFamily="@font/nanum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="LV.3"/>
                </LinearLayout>
                
            </LinearLayout>

            <TextView
                android:id="@+id/text_cardName"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nanum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#d50000"
                android:text="피요몬"/>
            
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/card_Img"
                    android:layout_margin="8dp"
                    android:background="@drawable/border_coner1"
                    android:elevation="5dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:adjustViewBounds="true"
                    android:src="@drawable/test"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="4">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#d50000"
                            android:text="◆ 세대"/>

                        <TextView
                            android:id="@+id/text_cardForm"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#5e5e5e"
                            android:text="성장기"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#d50000"
                            android:text="◆ 속성"/>

                        <TextView
                            android:id="@+id/text_cardAttribute"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#5e5e5e"
                            android:text="백신종"/>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#d50000"
                            android:text="◆ 특성"/>

                        <TextView
                            android:id="@+id/text_cardType"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#5e5e5e"
                            android:text="병아리형"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#d50000"
                            android:text="◆ DP"/>

                        <TextView
                            android:id="@+id/text_cardDP"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#5e5e5e"
                            android:text="2000"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:textSize="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#d50000"
                            android:text="◆ 등장 코스트"/>

                        <TextView
                            android:id="@+id/text_cardCost"
                            android:textSize="15dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum"
                            android:textColor="#5e5e5e"
                            android:text="3"/>
                    </LinearLayout>

                    

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#d50000"
                    android:text="◆ 진화 코스트 1"/>

                <TextView
                    android:id="@+id/text_cardEvCost1"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#5e5e5e"
                    android:text="Lv.2 에서 0"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#d50000"
                    android:text="◆ 진화 코스트 2"/>

                <TextView
                    android:id="@+id/text_cardEvCost2"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#5e5e5e"
                    android:text="-"/>
            </LinearLayout>
            
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#d50000"
                    android:text="◆ 효과"/>

                <TextView
                    android:id="@+id/text_effect"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#5e5e5e"
                    android:text="-"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#d50000"
                    android:text="◆ 진화원 효과"/>

                <TextView
                    android:id="@+id/text_digiEffect"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#5e5e5e"
                    android:text="-"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#d50000"
                    android:text="◆ 시큐리티 효과"/>

                <TextView
                    android:id="@+id/text_security"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#5e5e5e"
                    android:text="-"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#d50000"
                    android:text="◆ 프로모 정보"/>

                <TextView
                    android:id="@+id/text_promotion"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum"
                    android:textColor="#5e5e5e"
                    android:text="스타터덱 가이아 레드[ST-1]"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/button_close"
        android:layout_gravity="right"
        android:fontFamily="@font/nanum"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:text="X"
        />

</FrameLayout>